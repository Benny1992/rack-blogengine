#!/usr/bin/env ruby
require 'rack/blogengine'
require 'rack'   


	command = ARGV[0]

	if ARGV[1]
		target = ARGV[1]
	else
		target = "";
	end

	if command == "run"
		#To stuff here
		unless target.empty? 
			Rack::Handler::WEBrick.run(
	  			Rack::Blogengine::Application.new(target),
	  			:Port => 9200
			)
		else 
			puts "Specify a targetfolder!"
		end
	else
		puts "Use rake-blogengine run!"
	end

 