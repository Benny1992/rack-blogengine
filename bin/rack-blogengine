#!/usr/bin/env ruby
require_relative '../lib/rack/blogengine'
require 'rack'   

params = ARGV

params.each do |param|
	if param == "run"
		#To stuff here
		app = Rack::Builder.new do 
			run Rack::Blogengine::Application.new 
		end.to_app

		Rack::Handler::WEBrick.run(
  			app,
  			:Port => 9000
		)
	else
		puts "Use rake-blogengine run!"
	end
end
 